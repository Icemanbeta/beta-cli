{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "es2015",
      "es5",
      "es6",
      "dom",
      "scripthost"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": false,
    "target": "es6",
  },
  "include": [
    "typings/**/*",
  ],
}
