{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "es2015",
      "es2015.promise",
      "es5",
      "es6",
      "dom",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitAny": false,
    "paths": {
      "config/*": ["config/*","src/config/*"],
      "src/*": ["src/*"],
      "resources/*": ["test/resources/*"],
    },
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": false,
    "target": "es5",
  },
  "include": [
    "typings/**/*",
  ],
}
