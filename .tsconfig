{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017",
      "es2015",
      "es5",
      "es6",
      "dom",
      "scripthost"
    ],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "module": "system",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./",
    "sourceMap": false,
    "strict": true
  },
  "include": [
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
